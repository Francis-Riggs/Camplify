<% include partials/header %>
<% include partials/navbar %>

<main class="d-flex align-items-center">
<div class="container">
  <div class="row align-items-center justify-content-center">
    <form class="col-10 col-sm-8 col-md-6 col-lg-4 m-auto d-flex flex-column align-items-center" action="/reset/<%= token %>" method="POST">
      <img class="form-logo" src="/images/icons/tent-solid.svg">
      <h1 class="mt-1 text-center">Reset Password</h1>
      <div class="form-group mt-3 w-100">
        <label for="new-password">New Password</label>
        <input class="form-control shadow-none" id="new-password" type="password" name="password">
      </div>
      <div class="form-group w-100">
        <label for="confirm-password">Confirm New Password</label>
        <input class="form-control shadow-none" id="confirm-password" type="password" name="confirm">                
      </div>
      <button class="btn green-btn mt-4">Save Password</button>
    </form>
  </div>
</div>
</main>

<% include partials/footer %>