<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container text-center">
  <div class="row my-5">
    <div class="col-8 mx-auto pt-3 pb-4 px-4 border border-dark rounded shadow">
      <h1>Edit Review on <%= campground.name %></h1>
      <form class="mt-3" action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="rating">Rating (1-5)</label>
          <select id="rating" name="review[rating]">
            <option value=1 <%= (review.rating === 1) ? "selected": "" %> >1</option>
            <option value=2 <%= (review.rating === 2) ? "selected": "" %> >2</option>
            <option value=3 <%= (review.rating === 3) ? "selected": "" %> >3</option>
            <option value=4 <%= (review.rating === 4) ? "selected": "" %> >4</option>
            <option value=5 <%= (review.rating === 5) ? "selected": "" %> >5</option>
          </select>
          <input type="text" class="form-control" name="review[text]" id="campgroundName" value="<%= review.text %>">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </form>
    </div>
  </div>
</div>

<a href="/campgrounds">Go Back</a>
<% include ../partials/footer %>