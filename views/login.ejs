<% include partials/header %>
<% include partials/navbar %>

<main class="d-flex flex-column justify-content-center">
<div id="login" class="container">
  <div class="row align-items-center justify-content-center">
    <form class="col-10 col-sm-8 col-md-6 col-lg-3 m-auto text-center" action="/login" method="POST">
        <img src="/images/icons/tent-solid.svg" alt="">
        <h1 class="mt-1 header">Log In</h1>
        <div class="form-group mt-4">
          <input class="form-control shadow-none rounded-0" type="text" name="username" placeholder="Username">
          <input class="form-control shadow-none border-top-0 rounded-0" type="password" name="password" placeholder="Password">
          <p class="mb-0 mt-1"><a href="/reset" class="text-success">Forgot your password?</a></p>                
          <button class="btn green-btn btn-block mt-3 justify-content-center">Log In</button>
          <a href="/users/new" class="btn btn-block grey-btn">Create Account</a>
        </div>
    </form>
  </div>
</div>
</main>

