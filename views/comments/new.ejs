<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container text-center">
    <div class="row my-5">
        <div class="col-8 mx-auto pt-3 pb-4 px-4 border border-dark rounded shadow">

        
    
    
    <h1>Add New Comment to <%= campground.name %></h1>
    
    <form class="mt-3" action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="form-group">
        <label for="rating">Rating (1-5)</label>
        <select id="rating" name="comment[rating]">
            <option value=1>1</option>
            <option value=2>2</option>
            <option value=3>3</option>
            <option value=4>4</option>
            <option value=5>5</option>
        </select>
        <input type="text" class="form-control" name="comment[text]" id="campgroundName" placeholder="text">
      </div>
      <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
    
        </div>
    </div>
</div>

<a href="/campgrounds">Go Back</a>
<% include ../partials/footer %>