<% include ../partials/header %>
<% include ../partials/navbar %>

<main class="d-flex align-items-center">
    
    <form id="new-review" class="mt-3 container text-center" action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <h1 class="header mb-4">Review for<br/><%= campground.name %></h1>
        <div class="row mb-2 justify-content-center">
            <div class="col-auto d-flex justify-content-end align-items-center">
              <h5 class="m-0 font-weight-bold">Rating (1-5)</h5>            
            </div>
    
            <div class="col-auto d-flex flex-row-reverse justify-content-end">
                <input class="rating-input" id="star-5" type="radio" name="comment[rating]" value="5" required>
                <label class="rating-label" for="star-5"></label>        
        
                <input class="rating-input" id="star-4" type="radio" name="comment[rating]" value="4" required>
                <label class="rating-label" for="star-4"></label>
                
                <input class="rating-input" id="star-3" type="radio" name="comment[rating]" value="3" required>
                <label class="rating-label" for="star-3"></label>      
                
                <input class="rating-input" id="star-2" type="radio" name="comment[rating]" value="2" required>
                <label class="rating-label" for="star-2"></label> 
                
                <input class="rating-input" id="star-1" type="radio" name="comment[rating]" value="1" required>
                <label class="rating-label" for="star-1"></label>
            </div>            
        </div>
        <div class="row">
            <div class="col">
                <textarea class="form-control" name="comment[text]" id="campgroundName" maxlength="1500"
                  placeholder="Describe your experience at <%= campground.name %>"></textarea>                
            </div>
        </div>
        <div class="row justify-content-center mt-3">
              <button type="submit" class="btn green-btn col-3">Submit</button>            
        </div>



    </form>

</main>

