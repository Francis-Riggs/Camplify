<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container text-center">
    <div class="row my-5">
        <div class="col-8 mx-auto pt-3 pb-4 px-4 border border-dark rounded shadow">

        
    
    
    <h1>Add New Comment to <%= campground.name %></h1>
    
    <form class="mt-3" action="/campgrounds/<%= campground._id %>/comments" method="POST">
      <div class="form-group">
        <input type="text" class="form-control" name="comment[text]" id="campgroundName" placeholder="text">
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="comment[author]" id="imageURL" placeholder="author">
      </div>
      <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
    
        </div>
    </div>
</div>

<a href="/campgrounds">Go Back</a>
