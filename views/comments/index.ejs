<% include ../partials/header %>
<% include ../partials/navbar %>

<main>
<div id="review-index" class="container">

<div class="card mt-3">
    <div class="card-header align-items-middle container-fluid">
        <div class="row align-items-center">
            <h5 class="float-left pl-3 m-0"><strong>Reviews for <a href='/campgrounds/<%= campground._id %>'><%= campground.name %></a></strong></h5>
            <% let alreadyReviewed = false; %>
            <% comments.forEach((comment) => {if (currentUser && comment.author.id.equals(currentUser._id)){ alreadyReviewed = true; }}); if (!alreadyReviewed) { %>
                <a class="btn blue-btn float-right ml-auto mr-2" href="/campgrounds/<%= campground._id %>/comments/new"><img src="/images/icons/plus-black-symbol.svg" width="15" height="15" alt=""></a>
            <% } %>
        </div>


    </div>
    <ul class="list-group list-group-flush">
        <% comments.forEach(function(comment){ %>
        
        <li class="list-group-item campground-review">
            <div class="row px-3 justify-content-between">
                <div class="col-auto p-0 d-flex">
                  <img src="<%= comment.author.id.image %>" class="mr-3">
                  <div class="d-flex flex-column flex-shrink-0 justify-content-between">
                    <h5 class="d-inline pl-1"><strong><a href="/users/<%= comment.author.username %>"><%= comment.author.username %></a></strong></h5>
                    <span class="d-flex">
                        <% for (let i = 0; i < comment.rating; i++) { %>
                            <div class="review-star fill"></div>
                        <% } %>
                    </span>                                                
                  </div>
                </div>
                <div class="col-12 col-sm-auto d-flex flex-sm-column align-items-sm-end align-items-center p-0">
                    <small class="d-flex  flex-shrink-1"><%= moment(comment.createdAt).fromNow() %></small>
                    <% if (currentUser && comment.author.id.equals(currentUser._id)) { %>
                        <div class="btn-group btn-group-sm mt-1 ml-auto" role="group" aria-label="">
                            <a class="btn btn-info"
                               href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">
                               <img src="/images/icons/pencil.svg" width="15" height="15" alt=""> Edit
                            </a>
                            <form class=" delete-form"
                                  action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE"
                                  method="POST">
                                <button class="btn btn-sm btn-danger"><img src="/images/icons/trash.svg" width="15" height="15" alt=""> Delete</button>
                            </form>
                        </div>
                    <% } %>                                                
                </div>
            </div>
            <p class="mb-0 mt-2"><%= comment.text %></p>
        </li>
            
        <% }); %>
    </ul>
    
    <!-- Index Pagination -->
    <nav aria-label="Page navigation">
        <% if (pages && pages > 1) { %>
            <ul class="pagination justify-content-center">

            <!-- First Page button (disabled if on first page) -->
            <% if (current == 1) { %>
                <li class="page-item disabled"><a class="page-link">First</a></li>
            <% } else { %>
                <li><a class="page-link" href="<%= queryString({page: 1}) %>">First</a></li>
            <% } %>

            <!-- Previous Page button (disabled if on first page) -->
            <% if (current == 1) { %>
                <li class="page-item disabled"><a class="page-link">«</a></li>
            <% } else { %>
                <li><a class="page-link" href="<%= queryString({page: (Number(current) - 1)}) %>">
                «</a></li>
            <% } %>

            <!-- Previous pages ellipses (if there are 5+ previous pages) -->
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
                <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %>

            <!-- Display up to 9 page links (up to 4 before, current, and 4 after) -->
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                <li class="active"><a class="page-link"><%= i %></a></li>
                <% } else { %>
                    <li><a class="page-link" href="<%= queryString({page: i}) %>"><%= i %></a></li>
                <% } %>
            <% } %>

            <!-- Next pages ellipses (if there are 5+ subsequent pages) -->
            <% if (pages > Number(current) + 4) { %>
                <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %>

            <!-- Next page button (disabled if on the last page) -->
            <% if (current == pages) { %>
                <li class="page-item disabled"><a class="page-link">»</a></li>
            <% } else { %>
                <li><a class="page-link" href="<%= queryString({page: (Number(current) + 1)}) %>">»</a></li>
            <% } %>

            <!-- Last page button (disabled if on the last page) -->
            <% if (current == pages) { %>
                <li class="page-item disabled"><a class="page-link">Last</a></li>
            <% } else { %>
                <li><a class="page-link" href="<%= queryString({page: pages}) %>">Last</a></li>
            <% } %>
        </ul>
        <% } %>
    </nav>
    
</div>

</div>
</main>

<% include ../partials/footer %>