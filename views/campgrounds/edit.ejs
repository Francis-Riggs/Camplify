<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container text-center">
    <div class="row my-5">
        <div class="col-8 mx-auto pt-3 pb-4 px-4 border border-dark rounded shadow">

    <h1>Edit Campground</h1>

    <form class="mt-3 edit-form" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <input type="text" class="form-control" name="name" id="campgroundName" value="<%= campground.name %>" placeholder="name">
      </div>
      <div class="form-group">
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text">$</span>
          </div>
          <input type="number" class="form-control" name="price" value="<%= campground.price %>" placeholder="price" min="0.01" step="0.01">
        </div>
      </div>
      <div class="form-group">
        <input type="text" class="form-control" name="imageURL" id="imageURL" placeholder="Image URL">
      </div>
      <div class="form-group">
        <label for="image">Image Upload</label>
        <input type="file" class="form-control-file" id="image" name="image" accept="image/*">
      </div>
      <div class="form-group">
        <textarea class="form-control" name="description" id="textarea" rows="2" placeholder="description"><%= campground.description %></textarea>
      </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
        </div>

      <button type="submit" class="btn btn-primary btn-block">Submit</button>
    </form>
    
        </div>
    </div>
</div>

<a href="/campgrounds">Go Back</a>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCODv1xY28AoyCZZU3U2yLWirTRc6PJ3_c&libraries=places"></script>
<script>
    const input = document.getElementById('location');
    autocomplete = new google.maps.places.Autocomplete(input);
</script>


