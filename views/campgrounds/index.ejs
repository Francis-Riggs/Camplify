<% include ../partials/header %>
<% include ../partials/navbar %>

<div id="index-container" class="container">

    <!-- Index Header -->
    <div id="index-header" class="jumbotron my-4">
      <h1 class="display-4 text-center">Welcome to YelpCamp!</h1>
      <p class="lead text-center">Your adventure starts here</p>

      <p>Explore our hand-picked campgrounds from across America</p>
      <a class="btn btn-primary btn-md" href="/campgrounds/new" role="button">Add New Campground</a>
      <hr class="my-4">

    <!-- Index Sort Buttons -->
    <div class="dropdown text-right">
      <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <%= sortName[sortQuery] %>
      </a>

      <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
        <a class="dropdown-item" href="<%= queryString({sort: 'recent', page: current}) %>">Most Recent</a>
        <a class="dropdown-item" href="<%= queryString({sort: 'rating', page: current}) %>">Highest Rated</a>
        <a class="dropdown-item" href="<%= queryString({sort: 'reviews', page: current}) %>">Most Reviewed</a>
      </div>
    </div>

    </div>
    
    <div class="row">

        <!-- Campground Card -->
        <% campgrounds.forEach((campground) => { %>
            <div class="campground-index-card col-lg-4 col-sm-6 mb-4">
                <div class="card shadow">
                    <img class="card-img-top camp-index-img" src="<%= campground.image %>">
                    <div class="card-header">
                        <h4 class="camp-index-title text-center align-top m-0"><%= campground.name%></h4>
                        <p>
                                <span>
                                    <% if (!campground.commentCount) { %>
                                        <em>No ratings</em>
                                    <% } else {%>
                                        <% for (let i = 0; i < Math.round(campground.averageRating); i++) { %>
                                            &#9733;
                                        <% } %>
                                    <% } %>
                                </span>
                        </p>
                    </div>
                    <div class="card-body camp-index-body m-2">
                        <p class="card-text">
                            <% let words = campground.description.split(" "); %>
                            <% let limit = 15; %>
                            <% for (let i = 0; i < limit; i++) { %>
                                <%= words[i] %>
                            <% } %>
                            <%= ((words.length > limit) ? "...": "") %>
                        </p>
                        <a href='/campgrounds/<%= campground._id %>' class="card-link">More Info</a>
                    </div>
                </div>
            </div>
        <% }) %>

    </div>

    <!-- Index Pagination -->
    <nav aria-label="Page navigation">
        <% if (pages && pages > 1) { %>
            <ul class="pagination justify-content-center">

            <!-- First Page button (disabled if on first page) -->
            <% if (current == 1) { %>
                <li class="page-item disabled"><a class="page-link">First</a></li>
            <% } else { %>
                <li><a class="page-link" href="<%= queryString({sort: sortQuery, page: 1}) %>">First</a></li>
            <% } %>

            <!-- Previous Page button (disabled if on first page) -->
            <% if (current == 1) { %>
                <li class="page-item disabled"><a class="page-link">«</a></li>
            <% } else { %>
                <li><a class="page-link" href="<%= queryString({sort: sortQuery, page: (Number(current) - 1)}) %>">
                «</a></li>
            <% } %>

            <!-- Previous pages ellipses (if there are 5+ previous pages) -->
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
                <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %>

            <!-- Display up to 9 page links (up to 4 before, current, and 4 after) -->
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                <li class="active"><a class="page-link"><%= i %></a></li>
                <% } else { %>
                    <li><a class="page-link" href="<%= queryString({sort: sortQuery, page: i}) %>"><%= i %></a></li>
                <% } %>
            <% } %>

            <!-- Next pages ellipses (if there are 5+ subsequent pages) -->
            <% if (pages > Number(current) + 4) { %>
                <li class="page-item disabled"><a class="page-link">...</a></li>
            <% } %>

            <!-- Next page button (disabled if on the last page) -->
            <% if (current == pages) { %>
                <li class="page-item disabled"><a class="page-link">»</a></li>
            <% } else { %>
                <li><a class="page-link" href="<%= queryString({sort: sortQuery, page: (Number(current) + 1)}) %>">»</a></li>
            <% } %>

            <!-- Last page button (disabled if on the last page) -->
            <% if (current == pages) { %>
                <li class="page-item disabled"><a class="page-link">Last</a></li>
            <% } else { %>
                <li><a class="page-link" href="<%= queryString({sort: sortQuery, page: pages}) %>">Last</a></li>
            <% } %>

        </ul>
        <% } %>
    </nav>



</div>
<% include ../partials/footer %>