<div class="modal fade" id="new-review-modal" tabindex="-1" role="dialog" aria-labelledby="New review modal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title font-weight-bold">Review for <%= campground.name %></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <form class="container" action="/campgrounds/<%= campground._id %>/reviews" method="POST">
        <div class="row justify-content-center align-items-center mb-2">
          <span class="m-0 col-12 text-center font-weight-bold">Rating (1-5)</span>
          <div class="col-auto form-group d-flex flex-row-reverse m-0">
          <input class="rating-input" id="star-5" type="radio" name="review[rating]" value="5" required>
          <label class="rating-label" for="star-5"></label>        
          <input class="rating-input" id="star-4" type="radio" name="review[rating]" value="4" required>
          <label class="rating-label" for="star-4"></label>
          <input class="rating-input" id="star-3" type="radio" name="review[rating]" value="3" required>
          <label class="rating-label" for="star-3"></label>      
          <input class="rating-input" id="star-2" type="radio" name="review[rating]" value="2" required>
          <label class="rating-label" for="star-2"></label> 
          <input class="rating-input" id="star-1" type="radio" name="review[rating]" value="1" required>
          <label class="rating-label" for="star-1"></label>
          </div>            
        </div>
        <div class="row">
          <div class="col">
            <textarea class="form-control" name="review[text]" id="review-text" maxlength="1500"
              rows="4" placeholder="Describe your experience at <%= campground.name %>"></textarea>                
          </div>
        </div>
        <div class="row mt-3 justify-content-center">
          <button type="button" class="btn grey-btn col-3 mr-3" data-dismiss="modal">Close</button>
          <button type="submit" class="btn green-btn col-4">Submit Review</button>           
        </div>
      </form>
    </div>
    </div>
  </div>
</div>